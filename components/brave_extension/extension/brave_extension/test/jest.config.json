{
  "preset": "ts-jest",
  "moduleFileExtensions": [
    "js",
    "tsx",
    "ts",
    "json"
  ],
  "transform": {
    ".(jsx|js|ts|tsx)": "ts-jest"
  },
  "resetMocks": true,
  "resetModules": true,
  "collectCoverage": false,
  "testMatch": [
    "<rootDir>/actions/*.ts",
    "<rootDir>/background/api/*.ts",
    "<rootDir>/components/**/*.tsx",
    "<rootDir>/helpers/*.tsx",
    "<rootDir>/background/reducersTest.ts",
    "<rootDir>/background/storeTest.ts",
    "<rootDir>/background/reducers/*.ts",
    "<rootDir>/state/*.ts",
    "<rootDir>/background/events/*.ts"
  ],
  "transformIgnorePatterns": [
    "<rootDir>/node_modules"
  ],
  "setupTestFrameworkScriptFile": "./setupApp.ts",
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/fileMock.ts",
    "\\.(css|less)$": "identity-obj-proxy"
  }
}
