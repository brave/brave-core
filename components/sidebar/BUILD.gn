import("//brave/components/sidebar/buildflags/buildflags.gni")

static_library("sidebar") {
  sources = [
    "constants.h",
    "pref_names.h",
    "sidebar_item.cc",
    "sidebar_item.h",
    "sidebar_service.cc",
    "sidebar_service.h",
  ]

  deps = [
    "//base",
    "//brave/components/l10n/common",
