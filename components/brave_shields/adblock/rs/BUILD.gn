import("//build/rust/rust_static_library.gni")

rust_static_library("rust_lib") {
  crate_name = "adblock_cxx"
  crate_root = "src/lib.rs"
  allow_unsafe = true
  edition = "2021"
  sources = [
    "src/convert.rs",
    "src/engine.rs",
    "src/filter_set.rs",
    "src/lib.rs",
    "src/result.rs",
  ]

  visibility = [
    "//brave/components/brave_shields/adblock:*",
    "//brave/components/brave_shields/adblock/resolver",
  ]

  cxx_bindings = [ "src/lib.rs" ]

  deps = [
    "//brave/third_party/rust/adblock/v0_8:lib",
    "//brave/third_party/rust/thiserror/v1:lib",
    "//third_party/rust/serde_json/v1:lib",
  ]

  if (is_ios) {
    features = [ "ios" ]
  } else {
    features = [ "single_thread_optimizations" ]
  }
}
