module brave_shields.mojom;

import "mojo/public/mojom/base/token.mojom";

enum FarblingLevel {
  OFF,
  BALANCED,
  MAXIMUM,
};

// Maps to content_settings::SettingSource
enum ContentSettingSource {
  kNone = 0,
  kPolicy,
  kExtension,
  kUser,
  kAllowList,
  kRemoteList,
  kSupervised,
  kInstalledWebApp,
  kTpcdGrant,
  kOsJavascriptOptimizer,
  kTest,
};

struct ShieldsSettings {
  FarblingLevel farbling_level;
  mojo_base.mojom.Token farbling_token;
  array<string> origins_to_allow_scripts;
  bool reduce_language;
  bool enforced_script_blocking = false;
};

enum AdBlockMode {
  AGGRESSIVE,
  STANDARD,
  ALLOW
};

enum FingerprintMode {
  // STRICT clashes with Windows SDK
  STRICT_MODE,
  STANDARD_MODE,
  ALLOW_MODE
};

enum CookieBlockMode {
  CROSS_SITE_BLOCKED,
  BLOCKED,
  ALLOW
};

enum HttpsUpgradeMode {
  // STRICT clashes with Windows SDK
  STRICT_MODE,
  STANDARD_MODE,
  DISABLED_MODE
};

// Do not change order of this enum. The order is relied upon for
// it's accompanying shield setting.
enum AutoShredMode {
  NEVER = 0,
  LAST_TAB_CLOSED,
  APP_EXIT,
};
