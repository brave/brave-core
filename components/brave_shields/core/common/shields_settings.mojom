module brave_shields.mojom;

import "mojo/public/mojom/base/token.mojom";

enum FarblingLevel {
  OFF,
  BALANCED,
  MAXIMUM,
};

struct ShieldsSettings {
  FarblingLevel farbling_level;
  mojo_base.mojom.Token farbling_token;
  array<string> origins_to_allow_scripts;
  bool reduce_language;
};

enum AdBlockMode {
  AGGRESSIVE,
  STANDARD,
  ALLOW
};

enum FingerprintMode {
  // STRICT clashes with Windows SDK
  STRICT_MODE,
  STANDARD_MODE,
  ALLOW_MODE
};

enum CookieBlockMode {
  CROSS_SITE_BLOCKED,
  BLOCKED,
  ALLOW
};

enum HttpsUpgradeMode {
  // STRICT clashes with Windows SDK
  STRICT_MODE,
  STANDARD_MODE,
  DISABLED_MODE
};
