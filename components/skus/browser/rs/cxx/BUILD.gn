import("//build/rust/rust_static_library.gni")

rust_static_library("rust_lib") {
  crate_name = "skus_cxx"
  crate_root = "src/lib.rs"
  allow_unsafe = true
  sources = [
    "src/errors.rs",
    "src/httpclient.rs",
    "src/lib.rs",
    "src/log.rs",
    "src/storage.rs",
  ]
  cxx_bindings = [ "src/lib.rs" ]

  public_deps = [ ":shim" ]

  deps = [
    "//brave/components/skus/browser/rs/lib:rust_lib",
    "//brave/third_party/rust/async_trait/v0_1:lib",
    "//brave/third_party/rust/futures/v0_3:lib",
    "//brave/third_party/rust/tracing/v0_1:lib",
    "//brave/third_party/rust/tracing_subscriber/v0_2:lib",
    "//third_party/rust/libc/v0_2:lib",
    "//third_party/rust/serde_json/v1:lib",
  ]
}

source_set("shim") {
  visibility = [ ":*" ]
  sources = [ "src/shim.h" ]

  public_deps = [
    "//base",
    "//build/rust:cxx_cppdeps",
  ]
}
