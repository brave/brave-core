import("//brave/build/cargo.gni")

import("//build/config/features.gni")

lib_build_path = "$root_build_dir/brave_rust/out/$current_cpu"
lib_output_path =
    "$lib_build_path/${cargo_lib_prefix}brave_rust${cargo_lib_suffix}"

static_library("browser") {
  libs = [ lib_output_path ]

  sources = [
    "brave-rewards-cxx/src/cxx.h",
    "brave-rewards-cxx/src/shim.h",
    "brave-rewards-cxx/src/wrapper.cc",
    "brave-rewards-cxx/src/wrapper.h",
    "pref_names.h",
    "skus_sdk_context.cc",
    "skus_sdk_context.h",
    "skus_sdk_fetcher.cc",
    "skus_sdk_fetcher.h",
    "skus_sdk_service.cc",
    "skus_sdk_service.h",
    "skus_utils.cc",
    "skus_utils.h",
    "switches.h",
  ]

  # TODO(bsclifton): troubleshoot why there are duplicate symbols on Windows
  if (is_mac || is_linux) {
    sources += [ "brave-rewards-cxx/src/cxx.cc" ]
  } else if (is_win) {
    sources += [ "brave-rewards-cxx/src/cxx_win.cc" ]
  }

  deps = [
    "//base",
    "//brave/components/skus/common:mojom",
    "//components/keyed_service/core",
    "//components/pref_registry",
    "//components/prefs",
    "//net",
    "//services/network/public/cpp",
    "//services/preferences/public/cpp",
    "//url",
  ]

  # TODO: this config should only be applying to the
  # auto-generated rust files (wrapper.cpp, etc)
  #
  # I've tried making a separate target for those files but
  # it still complains :/
  configs -= [ "//build/config/clang:find_bad_constructs" ]
}
