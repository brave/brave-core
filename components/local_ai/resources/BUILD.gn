# Untrusted WebUI for WASM execution at chrome-untrusted://candle-bert-wasm
transpile_web_ui("candle_bert_bridge_ui") {
  entry_points = [ [
        "candle_bert_bridge",
        rebase_path("candle_bert_bridge.ts"),
      ] ]
  webpack_aliases = [ "browser" ]
  resource_name = "candle_bert_bridge"

  deps = [ "//brave/components/local_ai/common:mojom_js" ]
}

pack_web_resources("candle_bert_bridge_generated") {
  resource_name = "candle_bert_bridge"
  output_dir = "$root_gen_dir/brave/components/local_ai/resources"
  deps = [
    ":candle_bert_bridge_ui",
    "//brave/ui/webui/resources:candle_bert",
  ]
}

