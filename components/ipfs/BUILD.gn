static_library("ipfs") {
  sources = [
    "ipfs_prefs.cc",
    "ipfs_prefs.h",
    "ipfs_utils.cc",
    "ipfs_utils.h",
  ]

  deps = [
    "//base",
    "//brave/components/filecoin/rs:rust_lib",
    "//components/base32",
    "//components/prefs:prefs",
    "//net",
    "//url",
  ]

  if (!is_android && !is_ios) {
    sources += [
      "ipfs_component_cleaner.cc",
      "ipfs_component_cleaner.h",
    ]
    deps += [ "//chrome/common:constants" ]
  }
}
