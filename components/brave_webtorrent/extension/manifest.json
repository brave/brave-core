{
  "version": "1.0.0",
  "name": "Brave Webtorrent",
  "manifest_version": 2,
  "description": "Webtorrent extension",
  "background" : {
    "scripts": ["extension/out/brave_webtorrent_background.bundle.js"],
    "persistent": true
  },
  "permissions": ["dns", "tabs", "windows", "<all_urls>"],
  "sockets": {
    "udp": {
      "send": "*",
      "bind": "*"
    },
    "tcp": {
      "connect": "*"
    },
    "tcpServer": {
      "listen": "*:*"
    }
  },
  "content_security_policy": "default-src 'self'; connect-src 'self' http: https:; font-src 'self' data:; script-src 'self'; media-src 'self' http://127.0.0.1:*; form-action 'none'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; frame-src 'self' http://127.0.0.1:*;",
  "key": ""
}
