import("//brave/components/ai_chat/core/common/buildflags/buildflags.gni")

assert(enable_ai_chat)

component("common") {
  output_name = "ai_chat_common"
  defines = [ "IS_AI_CHAT_COMMON_IMPL" ]

  sources = [
    "constants.h",
    "features.cc",
    "features.h",
    "pref_names.cc",
    "pref_names.h",
    "utils.cc",
    "utils.h",
  ]

  deps = [
    "//base",
    "//brave/brave_domains",
    "//brave/components/ai_chat/core/common/buildflags:buildflags",
    "//components/prefs",
    "//url",
  ]
}

if (!is_ios) {
  source_set("unit_tests") {
    testonly = true
    sources = [
      "pref_names_unittest.cc",
      "utils_unittest.cc",
    ]

    deps = [
      "//base/test:test_support",
      "//brave/components/ai_chat/core/common",
      "//components/prefs:test_support",
      "//content/test:test_support",
      "//testing/gtest:gtest",
    ]
  }
}
