module ai_chat.mojom;

// Ollama local endpoints
const string kOllamaBaseUrl = "http://localhost:11434";

// Interface for communicating with a local Ollama instance.
// This interface is implemented directly by OllamaService and allows
// the UI to check connection status.
interface OllamaService {
  // Check if Ollama is running at localhost:11434
  IsConnected() => (bool connected);
};
