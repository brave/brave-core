source_set("brave_vpn") {
  sources = [
    "brave_vpn_connection_info.cc",
    "brave_vpn_connection_info.h",
    "brave_vpn_connection_manager.cc",
    "brave_vpn_connection_manager.h",
  ]

  deps = [
    ":brave_vpn_internal",
    "//base",
  ]

  libs = []

  if (is_win) {
    sources += [
      "brave_vpn_connection_manager_win.cc",
      "brave_vpn_connection_manager_win.h",
    ]

    libs += [ "rasapi32.lib" ]
  }
}

source_set("brave_vpn_internal") {
  visibility = [
    ":brave_vpn",
    ":vpntool",
  ]

  sources = []
  deps = [ "//base" ]

  if (is_win) {
    sources += [
      "utils_win.cc",
      "utils_win.h",
    ]
  }
}

executable("vpntool") {
  sources = []
  deps = [
    ":brave_vpn",
    ":brave_vpn_internal",
    "//base",
  ]

  if (is_win) {
    sources = [ "winvpntool.cc" ]
  }
}
