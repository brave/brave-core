import("//mojo/public/tools/bindings/mojom.gni")

mojom("mojom") {
  generate_java = true

  sources = [
    "rewards.mojom",
    "rewards_database.mojom",
  ]

  public_deps = [ "//mojo/public/mojom/base" ]
}

mojom("engine") {
  sources = [ "rewards_engine.mojom" ]

  public_deps = [ "//mojo/public/mojom/base" ]

  deps = [ ":mojom" ]
}

mojom("core") {
  sources = [ "rewards_core.mojom" ]

  public_deps = [ "//mojo/public/mojom/base" ]

  deps = [ ":mojom" ]
}

mojom("webui") {
  sources = [
    "rewards_page.mojom",
    "rewards_panel.mojom",
    "rewards_tip_panel.mojom",
  ]

  public_deps = [ "//mojo/public/mojom/base" ]

  deps = [ ":mojom" ]
}
