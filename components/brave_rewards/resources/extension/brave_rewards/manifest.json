{
  "version": "1.0.0",
  "name": "Brave Rewards",
  "manifest_version": 2,
  "description": "Brave Rewards Extension",
  "default_locale": "en_US",
  "incognito": "not_allowed",
  "background" : {
    "scripts": ["out/brave_rewards_panel_background.bundle.js"],
    "persistent": true
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "chrome://favicon/*",
    "https://www.twitch.tv/*",
    "https://www.youtube.com/*",
    "https://*.twitter.com/*"
  ],
  "browser_action": {
    "default_popup": "brave_rewards_panel.html",
    "default_icon": {
      "16": "img/bat-16.png",
      "32": "img/bat-32.png",
      "48": "img/bat-48.png",
      "64": "img/bat-64.png",
      "128": "img/bat-128.png",
      "256": "img/bat-256.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*"
      ],
      "js": [
        "out/brave_rewards_panel_content_twitter.bundle.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*.github.com/*"
      ],
      "js": [
        "out/brave_rewards_panel_content_github.bundle.js"
      ]
    },
    {
      "matches": [
        "https://*.reddit.com/*"
      ],
      "js": [
        "out/brave_rewards_panel_content_reddit.bundle.js"
      ]
    }
  ],
  "icons": {
    "16": "img/bat-16.png",
    "32": "img/bat-32.png",
    "48": "img/bat-48.png",
    "64": "img/bat-64.png",
    "128": "img/bat-128.png",
    "256": "img/bat-256.png"
  },
  "content_security_policy": "default-src 'self'; img-src 'self' chrome: data:; style-src 'self' 'unsafe-inline';font-src 'self' data:; connect-src https://api.twitter.com https://www.youtube.com 'self';",
  "key": ""
}
