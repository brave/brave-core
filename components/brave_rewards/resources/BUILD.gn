import("//brave/components/common/typescript.gni")
import("//brave/resources/brave_grit.gni")
import("//tools/grit/repack.gni")

brave_grit("static_resources") {
  source = "brave_rewards_static_resources.grd"

  outputs = [
    "grit/brave_rewards_resources.h",
    "brave_rewards_static.pak",
  ]
}

repack("resources") {
  public_deps = [
    ":static_resources",
    "creator_detection:resources",
    "page:resources",
    "rewards_internals:resources",
    "rewards_page:resources",
  ]

  sources = [
    "$root_gen_dir/brave/components/brave_rewards/resources/page/brave_rewards_page_generated.pak",
    "$root_gen_dir/brave/components/brave_rewards/resources/brave_rewards_static.pak",
    "$root_gen_dir/brave/components/brave_rewards/resources/creator_detection/creator_detection_generated.pak",
    "$root_gen_dir/brave/components/brave_rewards/resources/rewards_internals/rewards_internals_generated.pak",
    "$root_gen_dir/brave/components/brave_rewards/resources/rewards_page/rewards_page_generated.pak",
  ]

  if (!is_android) {
    sources += [
      "$root_gen_dir/brave/components/brave_rewards/resources/rewards_panel/brave_rewards_panel_generated.pak",
      "$root_gen_dir/brave/components/brave_rewards/resources/tip_panel/tip_panel_generated.pak",
    ]
    public_deps += [
      "rewards_panel:resources",
      "tip_panel:resources",
    ]
  }

  output = "$root_gen_dir/brave/components/brave_rewards/resources/brave_rewards_resources.pak"
}
