    "//mojo/public/cpp/bindings",
    "//net",
    "//services/network/public/cpp",
    "//services/network/public/mojom",
    "//ui/base",
    "//ui/message_center/public/cpp",
  ]

  public_deps += [
    "//brave/components/services/bat_ads/public/interfaces",
    "//brave/vendor/bat-native-ledger",
    "//services/network/public/mojom",
  ]
