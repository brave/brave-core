import("//build/config/ios/rules.gni")

config("internal_config") {
  cflags = [
    "-fobjc-weak",
    "-fobjc-abi-version=2",
    "-fobjc-legacy-dispatch",
    "-Wno-objc-property-synthesis",
    "-Wno-sign-compare",
  ]
}

source_set("components") {
  configs += [ ":internal_config" ]
  configs += [ "//build/config/compiler:enable_arc" ]
  configs -= [ "//build/config/gcc:symbol_visibility_hidden" ]

  sources = [
    "Bookmarks.mm",
    "Bookmarks.h",
    "BraveCoreShared.mm",
    "BraveCoreShared.h",
    "LocalDeviceInfo.mm",
    "LocalDeviceInfo.h",
    "Passphrase.mm",
    "Passphrase.h",
  ]

  deps = [
    ":channel_info",
    "bookmarks",
    "brave_sync",
    "//base",
    "//brave/ios/app",
    "//brave/ios/browser",
    "//brave/ios/browser/browser_state",
    "//components/bookmarks/browser",
    "//ios/chrome/browser/providers:provider_factory",
    "//ios/public/provider/chrome/browser",
    "//ios/web/public/init",
  ]
}

source_set("channel_info") {
  sources = [
    "channel_info.cc",
  ]

  deps = [
    "//components/version_info",
  ]
}
