import("//build/config/ios/rules.gni")

config("internal_config") {
  cflags = [
    "-fobjc-abi-version=2",
    "-fobjc-legacy-dispatch",
    "-Wno-objc-property-synthesis",
    "-Wno-sign-compare",
  ]
}

source_set("browser_state") {
  configs += [ ":internal_config" ]
  configs += [ "//build/config/compiler:enable_arc" ]
  configs -= [ "//build/config/gcc:symbol_visibility_hidden" ]

  sources = [
    "chrome_browser_state.h",
    "chrome_browser_state.mm",
    "browser_state_otr_helper.cc",
    "browser_state_otr_helper.h",
  ]

  deps = [
    ":chromium_sources",
    "//base",
    "//components/keyed_service/ios",
    "//components/prefs",
    "//components/pref_registry",
    "//components/sync_preferences",
    "//components/user_prefs",
    "//ios/web/public",
    "//ios/web/shell",
    "//net",
  ]

  public_deps = [
    "//ios/web/public",
  ]
}

source_set("chromium_sources") {
  sources = [
    "//ios/chrome/browser/prefs/ios_chrome_pref_service_factory.cc",
    "//ios/chrome/browser/prefs/ios_chrome_pref_service_factory.h",
    "//ios/chrome/browser/prefs/ios_chrome_pref_model_associator_client.cc",
    "//ios/chrome/browser/prefs/ios_chrome_pref_model_associator_client.h",
  ]

  deps = [
    "//base",
    "//components/content_settings/core/browser",
    "//components/prefs",
    "//components/proxy_config",
    "//components/sync_preferences",
    "//components/user_prefs",
  ]
}
