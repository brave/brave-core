{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "creative_ad_notifications": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "title",
              "body",
              "targetUrl",
              "creativeInstanceId"
            ],
            "properties": {
              "creativeSetId": {
                "type": "string"
              },
              "campaignId": {
                "type": "string"
              },
              "startAtTimestamp": {
                "type": "string"
              },
              "endAtTimestamp": {
                "type": "string"
              },
              "dailyCap": {
                "type": "number"
              },
              "advertiserId": {
                "type": "string"
              },
              "perDay": {
                "type": "number"
              },
              "totalMax": {
                "type": "number"
              },
              "category": {
                "type": "string"
              },
              "geoTargets": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "title": {
                "type": "string"
              },
              "body": {
                "type": "string"
              },
              "targetUrl": {
                "type": "string"
              },
              "creativeInstanceId": {
                "type": "string"
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "ad_conversions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "creativeSetId",
          "urlPattern",
          "type",
          "observationWindow"
        ],
        "properties": {
          "creativeSetId": {
            "type": "string"
          },
          "urlPattern": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "observationWindow": {
            "type": "number"
          }
        }
      }
    }
  },
  "required": [
    "creative_ad_notifications",
    "ad_conversions"
  ],
  "additionalProperties": false
}
