module ads.mojom;

enum BraveAdsEnvironment {
  STAGING = 0,
  PRODUCTION,
  DEVELOPMENT
};

struct BraveAdsInternalsInfo {
  string catalog_id;
  string catalog_last_updated;
  uint64 eligible_ads_count;
  bool enabled;
  string flagged_ads;
  string last_filtered_ads;
  string locale;
};

struct BraveAdsBuildChannel {
  bool is_release;
  string name;
};

enum BraveAdsAdType {
  kUndefined = 0,
  kAdNotification,
  kNewTabPageAd
};

enum BraveAdsAdNotificationEventType {
  kViewed = 0,
  kClicked,
  kDismissed,
  kTimedOut
};

enum BraveAdsNewTabPageAdEventType {
  kViewed = 0,
  kClicked
};

enum BraveAdsUrlRequestMethod {
  GET = 0,
  PUT,
  POST
};

enum BraveAdsP2AEventType {
  kListType = 0
};

struct BraveAdsUrlRequest {
  string url;
  array<string> headers;
  string content;
  string content_type;
  BraveAdsUrlRequestMethod method;
};

struct BraveAdsUrlResponse {
  string url;
  int32 status_code;
  string body;
  map<string, string> headers;
};
