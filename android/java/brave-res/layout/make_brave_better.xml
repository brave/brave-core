<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/onboarding_main_container_horizontal_margin">

    <TextView
        android:id="@+id/brave_onboarding_title"
        style="@style/HeadingH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p3a_title"
        android:textColor="@color/text_primary"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/onboarding_title_margin_top"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/brave_onboarding_subtitle"/>

    <TextView
        android:id="@+id/brave_onboarding_subtitle"
        style="@style/LargeRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p3a_subtitle"
        android:textColor="@color/text_secondary"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/onboarding_subtitle_margin_top"
        app:layout_constraintTop_toBottomOf="@+id/brave_onboarding_title"
        app:layout_constraintBottom_toTopOf="@+id/image_top_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/image_top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/onboarding_image_top_guide_percent" />

    <ImageView
        android:id="@+id/onboarding_illustration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/onboarding_illustration_margin_top"
        android:src="@drawable/onboarding_p3a_illustration"
        android:background="@drawable/onboarding_top_rounded_corners"
        android:padding="@dimen/onboarding_illustration_padding"
        android:contentDescription="@string/brave_onboarding_make_brave_better_illustration_description"
        app:layout_constraintTop_toBottomOf="@+id/image_top_guide"
        app:layout_constraintBottom_toTopOf="@+id/send_crash_reports_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        style="@style/LargeSemibold"
        android:id="@+id/send_crash_reports_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_reports_title"
        android:textColor="@color/text_primary"
        android:gravity="start"
        android:background="@color/schemes_surface_container"

        android:paddingTop="12dp"
        android:paddingHorizontal="24dp"

        app:layout_constraintTop_toBottomOf="@+id/onboarding_illustration"
        app:layout_constraintBottom_toTopOf="@+id/send_crash_reports_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


    <FrameLayout
        android:id="@+id/send_crash_reports_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/schemes_surface_container"

        app:layout_constraintTop_toBottomOf="@+id/send_crash_reports_title"
        app:layout_constraintBottom_toTopOf="@+id/send_p3a_reports_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/send_crash_reports"
            style="@style/BraveCheckBox"
            android:layoutDirection="rtl"
            android:textColor="@color/text_secondary"
            android:paddingHorizontal="8dp"
            android:layout_marginVertical="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/send_reports"
            android:gravity="top|start"
            />
    </FrameLayout>

    <TextView
        style="@style/LargeSemibold"
        android:id="@+id/send_p3a_reports_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_p3a_title"
        android:textColor="@color/text_primary"
        android:gravity="start"
        android:background="@color/schemes_surface_container"

        android:paddingTop="8dp"
        android:paddingHorizontal="24dp"

        app:layout_constraintTop_toBottomOf="@+id/send_crash_reports_container"
        app:layout_constraintBottom_toTopOf="@+id/send_p3a_reports_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <FrameLayout
        android:id="@+id/send_p3a_reports_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/onboarding_bottom_rounded_corners"
        android:paddingBottom="8dp"

        app:layout_constraintTop_toBottomOf="@+id/send_p3a_reports_title"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_start_browsing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/send_p3a_reports"
            style="@style/BraveCheckBox"
            android:layoutDirection="rtl"
            android:textColor="@color/text_secondary"

            android:layout_marginVertical="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/send_p3a"
            android:gravity="top|start"
            />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/onboarding_start_browsing"
        android:layout_width="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/onboarding_buttons_vertical_margin"
        android:text="@string/start_browsing"
        style="@style/LargeFilledButton"
        app:layout_constraintTop_toBottomOf="@+id/send_p3a_reports_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
