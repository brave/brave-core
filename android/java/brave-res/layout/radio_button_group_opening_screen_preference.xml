<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false">
    <org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout
        android:id="@+id/new_opening_screen_radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
            android:id="@+id/new_opening_screen_last_open_tab_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_touch_target_size"
            app:primaryText="@string/opening_screen_last_open_tab" />

        <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
            android:id="@+id/new_opening_screen_new_tab_after_inactivity_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_touch_target_size" />

        <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
            android:id="@+id/new_opening_screen_new_tab_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_touch_target_size"
            app:primaryText="@string/opening_screen_new_tab" />

    </org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout>
</LinearLayout>
