<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/shield_bg_color">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="18dp">

        <!-- Back button -->
        <ImageView
            android:id="@+id/trackers_back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_brave_unified_arrow_down"
            android:rotation="90"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/block_trackers_ads_title"/>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/block_trackers_ads_title"
            android:textSize="20sp"
            android:textColor="@color/shield_text_color"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Options Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/advanced_options_bg"
            tools:ignore="UselessParent">

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trackers_ads_description"
                android:textSize="14sp"
                android:textColor="@color/shield_text_color"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="24dp"/>

            <!-- Radio options -->
            <RadioGroup
                android:id="@+id/trackers_ads_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Option 1: Aggressive -->
                <LinearLayout
                    android:id="@+id/trackers_aggressive_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/block_trackers_ads_option_1"
                        android:textSize="16sp"
                        android:textColor="@color/shield_text_color"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/trackers_aggressive_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"/>

                </LinearLayout>

                <!-- Option 2: Standard -->
                <LinearLayout
                    android:id="@+id/trackers_standard_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/block_trackers_ads_option_2"
                        android:textSize="16sp"
                        android:textColor="@color/shield_text_color"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/trackers_standard_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"/>

                </LinearLayout>

                <!-- Option 3: Allow -->
                <LinearLayout
                    android:id="@+id/trackers_allow_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/block_trackers_ads_option_3"
                        android:textSize="16sp"
                        android:textColor="@color/shield_text_color"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/trackers_allow_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"/>

                </LinearLayout>

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
