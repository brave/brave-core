<!-- Background drawable for selected subscription plan in Origin paywall.

     This drawable is applied when a subscription plan (monthly or yearly) is
     selected by the user. It provides visual feedback through:
     - Semi-transparent background color for layering effect
     - Colored border to indicate selection state
     - Rounded corners for modern UI appearance

     Used in: activity_brave_origin_plans.xml for plan selector backgrounds
-->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent background for selected state -->
    <solid android:color="@color/primitive_blurple_35" />

    <!-- Border to highlight selection -->
    <stroke
        android:width="1dp"
        android:color="@color/primitive_blurple_50" />

    <!-- Rounded corners for modern appearance -->
    <corners android:radius="12dp" />
</shape>
