<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/shields_card_gradient_end"
                android:endColor="@color/shields_card_gradient_start"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/shields_card_border" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
