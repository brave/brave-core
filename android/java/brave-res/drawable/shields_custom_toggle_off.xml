<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Track background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#E4E4E5" />
            <size
                android:width="64dp"
                android:height="40dp" />
        </shape>
    </item>
    <!-- Track border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#C9C9CA" />
            <size
                android:width="64dp"
                android:height="40dp" />
        </shape>
    </item>
    <!-- Thumb on left side -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="28dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#C9C9CA" />
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>
</layer-list>
