<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Track background with gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="90"
                android:startColor="#20197F"
                android:endColor="#3126B1"
                android:type="linear" />
            <size
                android:width="64dp"
                android:height="40dp" />
        </shape>
    </item>
    <!-- Track border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#3A2ECD" />
            <size
                android:width="64dp"
                android:height="40dp" />
        </shape>
    </item>
    <!-- Thumb on right side (offset 28dp from left = 64-32-4) -->
    <item
        android:left="28dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:angle="0"
                android:startColor="#FFFFFF"
                android:endColor="#BCC6F3"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#EEF2FF" />
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>
</layer-list>
