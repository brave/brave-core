<!-- Thumb color for permission toggles - matches Figma design -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked/ON state: white thumb -->
    <item android:state_checked="true" android:color="@color/schemes_on_primary"/>
    <!-- Unchecked/OFF state: gray outline color -->
    <item android:color="#78787c"/>
</selector>


