<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:animateLayoutChanges="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingHorizontal="12dp"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/iv_item_network_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/wallet_secondary_text_color"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/btn_item_network_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_item_network_action"
        style="@style/BraveWalletTextButton"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:textStyle="bold"
        android:textColor="@color/brave_link"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_network_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_network_label"
        app:layout_constraintTop_toTopOf="@id/iv_item_network_label" />

    <ImageView
        android:id="@+id/iv_item_network_selector_selected"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_network_label"
        app:srcCompat="@drawable/ic_check"
        app:tint="@color/brave_blue_tint_color" />

    <ImageView
        android:id="@+id/iv_item_network_picture"
        android:layout_width="26dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:contentDescription="@null"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_network_selector_selected"
        app:layout_constraintTop_toBottomOf="@id/iv_item_network_label" />

    <TextView
        android:id="@+id/tv_item_network_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="8dp"
        android:textColor="@color/wallet_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_network_picture"
        app:layout_constraintTop_toBottomOf="@id/iv_item_network_label"
        tools:text="Demo" />
</androidx.constraintlayout.widget.ConstraintLayout>
