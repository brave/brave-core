<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp">

    <TextView
        android:id="@+id/item_fragment_two_line_title"
        style="@style/BraveWalletTextView"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/item_fragment_two_line_sub_title"
        app:layout_constraintHorizontal_weight="3.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Demo" />

    <TextView
        android:id="@+id/item_fragment_two_line_sub_title"
        style="@style/BraveWalletTextView"
        android:layout_width="0dp"
        android:drawablePadding="6dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="6.5"
        app:layout_constraintStart_toEndOf="@id/item_fragment_two_line_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="text" />
</androidx.constraintlayout.widget.ConstraintLayout>
