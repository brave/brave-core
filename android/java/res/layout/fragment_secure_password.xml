<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadeScrollbars="false"
    android:background="@color/wallet_bg"
    android:fillViewport="true"
    android:theme="@style/BraveWalletOnboarding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/ic_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_gravity="center"
                app:srcCompat="?attr/ic_onboarding_password"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/secure_your_crypto"
            android:textColor="@color/wallet_text_color"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="24dp"
            android:text="@string/password_text"
            android:textColor="@color/wallet_secondary_text_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/secure_crypto_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_wallet_edittext"
            android:hint="@string/enter_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:textColor="@color/wallet_text_color"
            android:textColorHint="@color/brave_theme_hint_text" />

        <EditText
            android:id="@+id/secure_crypto_retype_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_wallet_edittext"
            android:hint="@string/retype_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:textColor="@color/wallet_text_color"
            android:textColorHint="@color/brave_theme_hint_text" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_secure_crypto_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/crypto_wallet_blue_button"
            android:text="@string/continue_text"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            style="?android:attr/borderlessButtonStyle"/>

         <androidx.fragment.app.FragmentContainerView
            android:id="@+id/onboarding_component_download_progress"
            android:name="org.chromium.chrome.browser.crypto_wallet.fragments.onboarding_fragments.DownloadComponentProgressFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
