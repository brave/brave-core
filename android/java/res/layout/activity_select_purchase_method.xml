<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wallet_bg"
    android:fillViewport="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/wallet_toolbar_bg_color"
            android:translationZ="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_purchase_method_title"
                    style="@style/BraveWalletTextView"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:text="@string/wallet_buy_mainnet_button_text"/>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/select_options_text"
            style="@style/BraveWalletTextView"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/wallet_secondary_text_color"
            android:text="@string/brave_wallet_select_following_options"/>

    <LinearLayout
        android:id="@+id/ramp_network_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_filled_bg_radius_12"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:visibility="gone">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:paddingTop="8dp"
            android:paddingEnd="14dp"
            app:srcCompat="@drawable/ramp_logo"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BraveWalletTextViewTitle"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingVertical="8dp"
                android:text="@string/brave_wallet_ramp_network_title"
                android:textSize="18sp" />

            <TextView
                style="@style/BraveWalletTextView"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingVertical="8dp"
                android:text="@string/brave_wallet_buy_crypto_visa_mastercard"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/purchase_method_btn_ramp"
                style="@style/BraveWalletButtonHollow"
                android:layout_gravity="start"
                android:layout_marginVertical="8dp"
                android:text="@string/brave_wallet_buy_with_ramp_network"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/sardine_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_filled_bg_radius_12"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:visibility="gone">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:paddingTop="8dp"
            android:paddingEnd="14dp"
            app:srcCompat="@drawable/sardine_logo"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BraveWalletTextViewTitle"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingVertical="8dp"
                android:text="@string/brave_wallet_sardine_title"
                android:textSize="18sp" />

            <TextView
                style="@style/BraveWalletTextView"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingVertical="8dp"
                android:text="@string/brave_wallet_instant_buy"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/purchase_method_btn_sardine"
                style="@style/BraveWalletButtonHollow"
                android:layout_gravity="start"
                android:layout_marginVertical="8dp"
                android:text="@string/brave_wallet_buy_with_sardine"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/transak_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_filled_bg_radius_12"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:visibility="gone">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:paddingTop="8dp"
            android:paddingEnd="14dp"
            app:srcCompat="@drawable/transak_logo"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BraveWalletTextViewTitle"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/brave_wallet_transak_title"
                android:textSize="18sp" />

            <TextView
                style="@style/BraveWalletTextView"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingVertical="8dp"
                android:text="@string/brave_wallet_instant_buy"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/purchase_method_btn_transak"
                style="@style/BraveWalletButtonHollow"
                android:layout_gravity="start"
                android:layout_marginVertical="8dp"
                android:text="@string/brave_wallet_buy_with_transak"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

