<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry"
    android:background="@color/wallet_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="24dp"
            android:text="@string/buy"
            android:textSize="16sp" />

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:text="@string/buy_swap_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:background="@color/wallet_edittext_outline_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="24dp"
            android:text="@string/send"
            android:textSize="16sp" />

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:text="@string/send_swap_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:background="@color/wallet_edittext_outline_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/swap_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="24dp"
            android:text="@string/swap"
            android:textSize="16sp" />

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:text="@string/swap_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:background="@color/wallet_edittext_outline_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/deposit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="24dp"
            android:text="@string/deposit"
            android:textSize="16sp" />

        <TextView
            style="@style/BraveWalletTextView"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:text="@string/deposit_description" />

    </LinearLayout>

</LinearLayout>
