<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_fragment_two_line_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_fragment_two_line_title"
        style="@style/BraveWalletTextView"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/item_fragment_two_line_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Demo" />

    <TextView
        android:id="@+id/item_fragment_two_line_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/brave_theme_subtitle_text"
        app:layout_constraintBottom_toBottomOf="@id/item_fragment_two_line_icon"
        app:layout_constraintStart_toEndOf="@id/item_fragment_two_line_icon"
        app:layout_constraintTop_toBottomOf="@id/item_fragment_two_line_title"
        tools:text="text" />
</androidx.constraintlayout.widget.ConstraintLayout>
