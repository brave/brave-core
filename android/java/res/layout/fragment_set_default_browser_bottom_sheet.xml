<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="31dp"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    android:paddingBottom="31dp"
    android:orientation="vertical"
    tools:context=".SetDefaultBrowserBottomSheetFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="15dp"
        app:drawableStartCompat="@drawable/ic_brave_36"
        android:text="@string/brave_privacy_set_default_browser"
        android:textSize="20sp"
        android:textColor="@color/set_default_text_color"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="54dp"
        android:textSize="14sp"
        android:text="@string/brave_choose"
        android:textColor="@color/set_default_text_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:textSize="14sp"
            android:text="@string/brave_cancel"
            android:textColor="@color/onboarding_gray" 
            style="?android:attr/borderlessButtonStyle"/>

        <android.widget.Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/orange_rounded_button"
            app:backgroundTint="@null"
            android:text="@string/brave_next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:textSize="16sp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_dont_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:button="@drawable/brave_checkbox"
        android:layout_marginTop="20dp"
        android:paddingStart="8dp"
        android:text="@string/brave_dont_ask_again"
        android:textSize="14sp"
        android:textColor="@color/set_default_text_color"/>
    
</LinearLayout>
