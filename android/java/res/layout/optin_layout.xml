<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_optin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/sparkling_newsreader" />

    <TextView
        android:id="@+id/optin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="30dp"
        android:text="@string/brave_news_optin_title"
        android:textAlignment="center"
        android:textColor="@color/news_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/optin_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="30dp"
        android:text="@string/brave_news_optin_subtitle"
        android:textAlignment="center"
        android:textColor="@color/news_text_color"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/optin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/news_button_bg"
        android:layout_marginHorizontal="60dp"
        android:orientation="horizontal">


        <ProgressBar
            android:id="@+id/optin_loading_spinner"
            style="?android:progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/optin_button_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingHorizontal="40dp"
            android:textAlignment="center"
            android:text="@string/brave_news_optin_button"
            android:textColor="@color/news_text_color"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="normal"
            android:gravity="center" />

    </FrameLayout>

    <TextView
        android:id="@+id/optin_learnmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="30dp"
        android:text="@string/brave_news_optin_learn_more"
        android:textAlignment="center"
        android:textColor="@color/news_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
