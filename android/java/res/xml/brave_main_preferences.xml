        android:title="@string/prefs_private_search_engine"/>
    <android.support.v7.preference.PreferenceCategory
        android:key="controls_section"
        android:order="12"
        android:title="@string/prefs_section_controls"/>
    <org.chromium.chrome.browser.preferences.ChromeBasePreferenceCompat
        android:fragment="org.chromium.chrome.browser.preferences.BackgroundVideoPlaybackPreference"
        android:key="background_video_playback"
        android:order="13"
        android:title="@string/prefs_background_video_playback"/>
    <org.chromium.chrome.browser.preferences.ChromeBasePreferenceCompat
        android:fragment="org.chromium.chrome.browser.preferences.ClosingAllTabsClosesBravePreference"
        android:key="closing_all_tabs_closes_brave"
        android:order="14"
        android:title="@string/prefs_closing_all_tabs_closes_brave"/>
