<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:orderingFromXml="false">

    <android.support.v7.preference.PreferenceCategory
        android:key="search_engine_section"
        android:order="0"
        android:title="@string/prefs_section_search_engine"/>
    <org.chromium.chrome.browser.preferences.ChromeBasePreferenceCompat
        android:fragment="org.chromium.chrome.browser.preferences.BraveStandardSearchEnginePreference"
        android:key="standard_search_engine"
        android:order="1"
        android:title="@string/prefs_standard_search_engine"/>
    <org.chromium.chrome.browser.preferences.ChromeBasePreferenceCompat
        android:fragment="org.chromium.chrome.browser.preferences.BravePrivateSearchEnginePreference"
