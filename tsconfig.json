{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    // esnext modules supports import() async webpack modules
    "module": "esnext",
    // chrome 70 supports 100% es2017/8
    "target": "es2017",
    "allowJs": true,
    // convert jsx to react components
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "es7",
      "es2017"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "brave-ui": ["node_modules/brave-ui/src"],
      "brave-ui/*": ["node_modules/brave-ui/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./components/definitions"
    ],
    // optional
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "./components/definitions/*",
    "./components/brave_extension/extension/brave_extension/types/**/*"
  ]
}
