import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "serde_ipld_dagcbor"
  epoch = "0.2"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/examples/readme.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/src/cbor4ii_nonpub.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/src/de.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/src/error.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/src/lib.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/src/ser.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/tests/cid.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/tests/de.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/tests/enum.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/tests/ipld.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/tests/ser.rs",
    "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/tests/std_types.rs",
  ]
  inputs =
      [ "//brave/third_party/rust/serde_ipld_dagcbor/v0_2/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.2.2"
  cargo_pkg_authors = "Pyfisch <pyfisch@posteo.org>, Steven Fackler <sfackler@gmail.com>, Volker Mische <volker.mische@gmail.com>"
  cargo_pkg_name = "serde_ipld_dagcbor"
  cargo_pkg_description = "IPLD DAG-CBOR support for Serde."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/cbor4ii/v0_2:lib",
    "//brave/third_party/rust/cid/v0_8:lib",
    "//brave/third_party/rust/scopeguard/v1:lib",
    "//third_party/rust/serde/v1:lib",
  ]
  features = [ "std" ]
}
