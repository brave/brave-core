import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "ppoprf"
  epoch = "0.2"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/ppoprf/v0_2/crate/benches/bench.rs",
    "//brave/third_party/rust/ppoprf/v0_2/crate/examples/client.rs",
    "//brave/third_party/rust/ppoprf/v0_2/crate/examples/server.rs",
    "//brave/third_party/rust/ppoprf/v0_2/crate/src/ggm.rs",
    "//brave/third_party/rust/ppoprf/v0_2/crate/src/lib.rs",
    "//brave/third_party/rust/ppoprf/v0_2/crate/src/ppoprf.rs",
  ]
  inputs = [
    "//brave/third_party/rust/ppoprf/v0_2/crate/README.md",
    "//brave/third_party/rust/ppoprf/v0_2/crate/SECURITY.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.2.0"
  cargo_pkg_authors = "Alex Davidson <coela@alxdavids.xyz>"
  cargo_pkg_name = "ppoprf"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/bincode/v1:lib",
    "//brave/third_party/rust/bitvec/v1:lib",
    "//brave/third_party/rust/curve25519_dalek/v3:lib",
    "//brave/third_party/rust/derive_more/v0_99:lib",
    "//brave/third_party/rust/rand_core/v0_5:lib",
    "//brave/third_party/rust/strobe_rng/v0_2:lib",
    "//brave/third_party/rust/strobe_rs/v0_8:lib",
    "//brave/third_party/rust/zeroize/v1:lib",
    "//third_party/rust/base64/v0_13:lib",
    "//third_party/rust/rand/v0_8:lib",
    "//third_party/rust/rand_core/v0_6:lib",
    "//third_party/rust/serde/v1:lib",
  ]
  aliased_deps = {
    rand_core_ristretto = "//brave/third_party/rust/rand_core/v0_5:lib__rlib"
  }
}
