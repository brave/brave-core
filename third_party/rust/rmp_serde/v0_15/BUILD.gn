import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "rmp_serde"
  epoch = "0.15"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/rmp_serde/v0_15/crate/benches/buf.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/src/config.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/src/decode.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/src/encode.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/src/lib.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/tests/decode.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/tests/decode_derive.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/tests/encode.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/tests/encode_derive.rs",
    "//brave/third_party/rust/rmp_serde/v0_15/crate/tests/round.rs",
  ]
  inputs = [ "//brave/third_party/rust/rmp_serde/v0_15/crate/CHANGELOG.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.15.5"
  cargo_pkg_authors = "Evgeny Safronov <division494@gmail.com>"
  cargo_pkg_name = "rmp-serde"
  cargo_pkg_description = "Serde bindings for RMP"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/byteorder/v1:lib",
    "//brave/third_party/rust/rmp/v0_8:lib",
    "//third_party/rust/serde/v1:lib",
  ]
}
