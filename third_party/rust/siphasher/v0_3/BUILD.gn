import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "siphasher"
  epoch = "0.3"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/siphasher/v0_3/crate/src/lib.rs",
    "//brave/third_party/rust/siphasher/v0_3/crate/src/sip.rs",
    "//brave/third_party/rust/siphasher/v0_3/crate/src/sip128.rs",
    "//brave/third_party/rust/siphasher/v0_3/crate/src/tests.rs",
    "//brave/third_party/rust/siphasher/v0_3/crate/src/tests128.rs",
  ]
  inputs = [ "//brave/third_party/rust/siphasher/v0_3/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.3.10"
  cargo_pkg_authors = "Frank Denis <github@pureftpd.org>"
  cargo_pkg_name = "siphasher"
  cargo_pkg_description =
      "SipHash-2-4, SipHash-1-3 and 128-bit variants in pure Rust"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  features = [ "std" ]
}
