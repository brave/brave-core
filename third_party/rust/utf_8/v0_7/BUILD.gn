import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "utf_8"
  epoch = "0.7"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/utf_8/v0_7/crate/benches/from_utf8_lossy.rs",
    "//brave/third_party/rust/utf_8/v0_7/crate/src/lib.rs",
    "//brave/third_party/rust/utf_8/v0_7/crate/src/lossy.rs",
    "//brave/third_party/rust/utf_8/v0_7/crate/src/read.rs",
    "//brave/third_party/rust/utf_8/v0_7/crate/tests/unit.rs",
  ]
  inputs = [ "//brave/third_party/rust/utf_8/v0_7/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2015"
  cargo_pkg_version = "0.7.6"
  cargo_pkg_authors = "Simon Sapin <simon.sapin@exyr.org>"
  cargo_pkg_name = "utf-8"
  cargo_pkg_description =
      "Incremental, zero-copy UTF-8 decoding with error handling"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
}
