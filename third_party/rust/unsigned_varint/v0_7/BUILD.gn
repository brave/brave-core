import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "unsigned_varint"
  epoch = "0.7"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/benches/benchmark.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/examples/uvi.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/src/aio.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/src/codec.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/src/decode.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/src/encode.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/src/io.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/src/lib.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/src/nom.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/tests/identity.rs",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/tests/io.rs",
  ]
  inputs = [
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/CHANGELOG.md",
    "//brave/third_party/rust/unsigned_varint/v0_7/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.7.1"
  cargo_pkg_authors = "Parity Technologies <admin@parity.io>"
  cargo_pkg_name = "unsigned-varint"
  cargo_pkg_description = "unsigned varint encoding"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  features = [ "std" ]
}
