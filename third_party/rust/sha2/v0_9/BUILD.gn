import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "sha2"
  epoch = "0.9"
  crate_type = "rlib"
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/sha2/v0_9/crate/benches/sha256.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/benches/sha512.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/examples/sha256sum.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/examples/sha512sum.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/consts.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/lib.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/sha256.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/sha256/aarch64.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/sha256/soft.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/sha256/x86.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/sha512.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/sha512/soft.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/src/sha512/x86.rs",
    "//brave/third_party/rust/sha2/v0_9/crate/tests/lib.rs",
  ]
  inputs = [
    "//brave/third_party/rust/sha2/v0_9/crate/CHANGELOG.md",
    "//brave/third_party/rust/sha2/v0_9/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.9.9"
  cargo_pkg_authors = "RustCrypto Developers"
  cargo_pkg_name = "sha2"
  cargo_pkg_description = "Pure Rust implementation of the SHA-2 hash function family including SHA-224, SHA-256, SHA-384, and SHA-512."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/block_buffer/v0_9:lib",
    "//brave/third_party/rust/digest/v0_9:lib",
    "//brave/third_party/rust/opaque_debug/v0_3:lib",
    "//third_party/rust/cfg_if/v1:lib",
  ]
  features = [ "std" ]
  if ((target_cpu == "arm64" &&
       (target_os == "mac" || target_os == "linux" || target_os == "ios")) ||
      target_cpu == "x64" || target_cpu == "x86") {
    deps += [ "//brave/third_party/rust/cpufeatures/v0_2:lib" ]
  }
}
