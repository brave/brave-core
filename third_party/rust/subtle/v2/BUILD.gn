import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "subtle"
  epoch = "2"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/subtle/v2/crate/src/lib.rs",
    "//brave/third_party/rust/subtle/v2/crate/tests/mod.rs",
  ]
  inputs = [
    "//brave/third_party/rust/subtle/v2/crate/CHANGELOG.md",
    "//brave/third_party/rust/subtle/v2/crate/CONTRIBUTING.md",
    "//brave/third_party/rust/subtle/v2/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2015"
  cargo_pkg_version = "2.4.1"
  cargo_pkg_authors = "Isis Lovecruft <isis@patternsinthevoid.net>, Henry de Valence <hdevalence@hdevalence.ca>"
  cargo_pkg_name = "subtle"
  cargo_pkg_description = "Pure-Rust traits and utilities for constant-time cryptographic implementations."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  features = [
    "i128",
    "std",
  ]
}
