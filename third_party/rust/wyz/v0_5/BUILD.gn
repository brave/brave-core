import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "wyz"
  epoch = "0.5"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/wyz/v0_5/crate/src/bidi.rs",
    "//brave/third_party/rust/wyz/v0_5/crate/src/comu.rs",
    "//brave/third_party/rust/wyz/v0_5/crate/src/exit.rs",
    "//brave/third_party/rust/wyz/v0_5/crate/src/fmt.rs",
    "//brave/third_party/rust/wyz/v0_5/crate/src/lib.rs",
    "//brave/third_party/rust/wyz/v0_5/crate/src/range.rs",
    "//brave/third_party/rust/wyz/v0_5/crate/src/wm.rs",
  ]
  inputs = [ "//brave/third_party/rust/wyz/v0_5/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.5.1"
  cargo_pkg_authors = "myrrlyn <self@myrrlyn.dev>"
  cargo_pkg_name = "wyz"
  cargo_pkg_description = "myrrlynâ€™s utility collection"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//brave/third_party/rust/tap/v1:lib" ]
}
