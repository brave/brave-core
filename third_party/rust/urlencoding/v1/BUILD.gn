import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "urlencoding"
  epoch = "1"
  crate_type = "rlib"
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/urlencoding/v1/crate/benches/bench.rs",
    "//brave/third_party/rust/urlencoding/v1/crate/src/dec.rs",
    "//brave/third_party/rust/urlencoding/v1/crate/src/enc.rs",
    "//brave/third_party/rust/urlencoding/v1/crate/src/lib.rs",
  ]
  inputs = [ "//brave/third_party/rust/urlencoding/v1/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "1.3.3"
  cargo_pkg_authors =
      "Kornel <kornel@geekhood.net>, Bertram Truong <b@bertramtruong.com>"
  cargo_pkg_name = "urlencoding"
  cargo_pkg_description = "A Rust library for doing URL percentage encoding."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
}
