import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "rand_chacha"
  epoch = "0.2"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/rand_chacha/v0_2/crate/src/chacha.rs",
    "//brave/third_party/rust/rand_chacha/v0_2/crate/src/guts.rs",
    "//brave/third_party/rust/rand_chacha/v0_2/crate/src/lib.rs",
  ]
  inputs = [
    "//brave/third_party/rust/rand_chacha/v0_2/crate/CHANGELOG.md",
    "//brave/third_party/rust/rand_chacha/v0_2/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.2.2"
  cargo_pkg_authors = "The Rand Project Developers, The Rust Project Developers, The CryptoCorrosion Contributors"
  cargo_pkg_name = "rand_chacha"
  cargo_pkg_description = "ChaCha random number generator"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/rand_core/v0_5:lib",
    "//third_party/rust/ppv_lite86/v0_2:lib",
  ]
  features = [
    "simd",
    "std",
  ]
}
