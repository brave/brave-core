import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "sharks"
  epoch = "0.5"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/sharks/v0_5/crate/benches/benchmarks.rs",
    "//brave/third_party/rust/sharks/v0_5/crate/fuzz/fuzz_targets/deserialize_share.rs",
    "//brave/third_party/rust/sharks/v0_5/crate/fuzz/fuzz_targets/generate_shares.rs",
    "//brave/third_party/rust/sharks/v0_5/crate/fuzz/fuzz_targets/recover.rs",
    "//brave/third_party/rust/sharks/v0_5/crate/fuzz/fuzz_targets/serialize_share.rs",
    "//brave/third_party/rust/sharks/v0_5/crate/src/lib.rs",
    "//brave/third_party/rust/sharks/v0_5/crate/src/share_ff.rs",
  ]
  inputs = [
    "//brave/third_party/rust/sharks/v0_5/crate/CHANGELOG.md",
    "//brave/third_party/rust/sharks/v0_5/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.5.0"
  cargo_pkg_authors = "Aitor Ruano <codearm@pm.me>"
  cargo_pkg_name = "sharks"
  cargo_pkg_description =
      "Fast, small and secure Shamir's Secret Sharing library crate"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/bitvec/v1:lib",
    "//brave/third_party/rust/byteorder/v1:lib",
    "//brave/third_party/rust/ff/v0_13:lib",
    "//brave/third_party/rust/zeroize/v1:lib",
    "//third_party/rust/rand/v0_8:lib",
    "//third_party/rust/rand_core/v0_6:lib",
  ]
  features = [
    "zeroize",
    "zeroize_memory",
  ]
}
