    "//third_party/rust/memchr/v2:lib",
    "//third_party/rust/regex/v1:lib",
    "//third_party/rust/serde/v1:lib",
  ]
  features = [
    "css-validation",
    "cssparser",
    "full-regex-handling",
    "regex-debug-info",
    "selectors",
  ]
  if (is_ios) {
    features += [
      "content-blocking",
      "serde_json",
    ]
    deps += [ "//third_party/rust/serde_json/v1:lib" ]
  } else {
    features += [
      "object-pooling",
      "lifeguard",
      "unsync-regex-caching",
    ]
    deps += [ "//brave/third_party/rust/lifeguard/v0_6:lib" ]
  }
}
