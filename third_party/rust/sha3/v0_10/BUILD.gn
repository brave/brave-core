import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "sha3"
  epoch = "0.10"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/sha3/v0_10/crate/benches/mod.rs",
    "//brave/third_party/rust/sha3/v0_10/crate/src/lib.rs",
    "//brave/third_party/rust/sha3/v0_10/crate/src/macros.rs",
    "//brave/third_party/rust/sha3/v0_10/crate/src/state.rs",
    "//brave/third_party/rust/sha3/v0_10/crate/tests/cshake.rs",
    "//brave/third_party/rust/sha3/v0_10/crate/tests/mod.rs",
  ]
  inputs = [
    "//brave/third_party/rust/sha3/v0_10/crate/CHANGELOG.md",
    "//brave/third_party/rust/sha3/v0_10/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.10.3"
  cargo_pkg_authors = "RustCrypto Developers"
  cargo_pkg_name = "sha3"
  cargo_pkg_description = "SHA-3 (Keccak) hash function"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/digest/v0_10:lib",
    "//brave/third_party/rust/keccak/v0_1:lib",
  ]
}
