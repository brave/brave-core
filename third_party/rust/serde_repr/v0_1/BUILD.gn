import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "serde_repr"
  epoch = "0.1"
  crate_type = "proc-macro"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/serde_repr/v0_1/crate/src/lib.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/src/parse.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/tests/compiletest.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/tests/test.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/tests/ui/empty_enum.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/tests/ui/missing_repr.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/tests/ui/multiple_others.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/tests/ui/non_unit_variant.rs",
    "//brave/third_party/rust/serde_repr/v0_1/crate/tests/ui/not_enum.rs",
  ]
  inputs = [ "//brave/third_party/rust/serde_repr/v0_1/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.1.7"
  cargo_pkg_authors = "David Tolnay <dtolnay@gmail.com>"
  cargo_pkg_name = "serde_repr"
  cargo_pkg_description = "Derive Serialize and Deserialize that delegates to the underlying repr of a C-like enum."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//third_party/rust/proc_macro2/v1:lib",
    "//third_party/rust/quote/v1:lib",
    "//third_party/rust/syn/v1:lib",
  ]
}
