group("lib") {
  public_deps = [ "//third_party/rust/proc_macro2/v1:lib" ]
}

# This is copied from //third_party/rust/proc_macro2/v1:lib for build dependencies
# All deps should be changed from lib -> buildrs_support
# TODO(bridiver) find a better way to handle this
import("//build/rust/cargo_crate.gni")
cargo_crate("buildrs_support") {
  crate_name = "proc_macro2"
  epoch = "1"
  crate_type = "rlib"
  crate_root =
      "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/lib.rs"
  sources = [
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/detection.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/extra.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/fallback.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/lib.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/location.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/marker.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/parse.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/probe.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/probe/proc_macro_span.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/probe/proc_macro_span_file.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/probe/proc_macro_span_location.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/rcvec.rs",
    "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/src/wrapper.rs",
  ]
  inputs = []

  build_native_rust_unit_tests = false
  edition = "2021"
  cargo_pkg_authors =
      "David Tolnay <dtolnay@gmail.com>, Alex Crichton <alex@alexcrichton.com>"
  cargo_pkg_name = "proc-macro2"
  cargo_pkg_description = "A substitute implementation of the compiler's `proc_macro` API to decouple token-based libraries from the procedural macro use case."
  cargo_pkg_repository = "https://github.com/dtolnay/proc-macro2"
  cargo_pkg_version = "1.0.101"

  allow_unsafe = true

  deps = [ "//third_party/rust/unicode_ident/v1:lib" ]
  features = [
    "default",
    "proc-macro",
    "span-locations",
  ]
  build_root =
      "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/build.rs"
  build_sources =
      [ "//third_party/rust/chromium_crates_io/vendor/proc-macro2-v1/build.rs" ]

  #####################################################################
  # Tweaking which GN `config`s apply to this target.

  # Config changes that apply to all `//third_party/rust` crates.
  _configs_to_remove = [
    # We don't need code coverage data for any `chromium_crates_io` crates.
    "//build/config/coverage:default_coverage",

    # This is third-party code, so remove `chromium_code` config.  We are not
    # at the same time adding `//build/config/compiler:no_chromium_code`,
    # because 1) we don't want to pull how warnings are handled by that config
    # and 2) that config doesn't have any non-warnings-related stuff.
    "//build/config/compiler:chromium_code",
  ]
  _configs_to_add = []

  # Changing (if needed) which configs apply to this specific crate (based on
  # `extra_kv.configs_to_remove` and `extra_kv.configs_to_add` from
  # `gnrt_config.toml`).
  _configs_to_remove += []
  _configs_to_add += []

  # Applying config changes.
  library_configs -= _configs_to_remove
  library_configs += _configs_to_add
  executable_configs -= _configs_to_remove
  executable_configs += _configs_to_add
  proc_macro_configs -= _configs_to_remove
  proc_macro_configs += _configs_to_add
}
