import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "thread_local"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/thread_local/v1/crate/benches/thread_local.rs",
    "//brave/third_party/rust/thread_local/v1/crate/src/cached.rs",
    "//brave/third_party/rust/thread_local/v1/crate/src/lib.rs",
    "//brave/third_party/rust/thread_local/v1/crate/src/thread_id.rs",
    "//brave/third_party/rust/thread_local/v1/crate/src/unreachable.rs",
  ]
  inputs = [ "//brave/third_party/rust/thread_local/v1/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2021"
  cargo_pkg_version = "1.1.7"
  cargo_pkg_authors = "Amanieu d'Antras <amanieu@gmail.com>"
  cargo_pkg_name = "thread_local"
  cargo_pkg_description = "Per-object thread-local storage"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/once_cell/v1:lib",
    "//third_party/rust/cfg_if/v1:lib",
  ]
}
