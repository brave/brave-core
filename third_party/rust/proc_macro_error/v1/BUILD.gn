import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "proc_macro_error"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/proc_macro_error/v1/crate/build.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/src/diagnostic.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/src/dummy.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/src/imp/delegate.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/src/imp/fallback.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/src/lib.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/src/macros.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/src/sealed.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/macro-errors.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ok.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/runtime-errors.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/abort.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/append_dummy.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/children_messages.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/dummy.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/emit.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/explicit_span_range.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/misuse.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/multiple_tokens.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/not_proc_macro.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/option_ext.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/proc_macro_hack.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/result_ext.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/to_tokens_span.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/unknown_setting.rs",
    "//brave/third_party/rust/proc_macro_error/v1/crate/tests/ui/unrelated_panic.rs",
  ]
  inputs = [
    "//brave/third_party/rust/proc_macro_error/v1/crate/CHANGELOG.md",
    "//brave/third_party/rust/proc_macro_error/v1/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "1.0.4"
  cargo_pkg_authors = "CreepySkeleton <creepy-skeleton@yandex.ru>"
  cargo_pkg_name = "proc-macro-error"
  cargo_pkg_description = "Almost drop-in replacement to panics in proc-macros"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/proc_macro_error_attr/v1:lib",
    "//third_party/rust/proc_macro2/v1:lib",
    "//third_party/rust/quote/v1:lib",
    "//third_party/rust/syn/v1:lib",
  ]
  build_deps = [ "//brave/third_party/rust/version_check/v0_9:buildrs_support" ]
  features = [
    "syn",
    "syn-error",
  ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
