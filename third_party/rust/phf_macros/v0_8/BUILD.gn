import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "phf_macros"
  epoch = "0.8"
  crate_type = "proc-macro"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/phf_macros/v0_8/crate/benches/bench.rs",
    "//brave/third_party/rust/phf_macros/v0_8/crate/src/lib.rs",
    "//brave/third_party/rust/phf_macros/v0_8/crate/tests/compile-fail-unicase/equivalent-keys.rs",
    "//brave/third_party/rust/phf_macros/v0_8/crate/tests/compile-fail/bad-syntax.rs",
    "//brave/third_party/rust/phf_macros/v0_8/crate/tests/compiletest.rs",
    "//brave/third_party/rust/phf_macros/v0_8/crate/tests/test.rs",
  ]
  inputs = []

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.8.0"
  cargo_pkg_authors = "Steven Fackler <sfackler@gmail.com>"
  cargo_pkg_name = "phf_macros"
  cargo_pkg_description = "Macros to generate types in the phf crate"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/phf_generator/v0_8:lib",
    "//brave/third_party/rust/phf_shared/v0_8:lib",
    "//brave/third_party/rust/proc_macro_hack/v0_5:lib",
    "//third_party/rust/proc_macro2/v1:lib",
    "//third_party/rust/quote/v1:lib",
    "//third_party/rust/syn/v1:lib",
  ]
}
