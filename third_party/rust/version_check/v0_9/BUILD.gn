import("//build/rust/cargo_crate.gni")

cargo_crate("buildrs_support") {
  crate_name = "version_check"
  epoch = "0.9"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/version_check/v0_9/crate/src/channel.rs",
    "//brave/third_party/rust/version_check/v0_9/crate/src/date.rs",
    "//brave/third_party/rust/version_check/v0_9/crate/src/lib.rs",
    "//brave/third_party/rust/version_check/v0_9/crate/src/version.rs",
  ]
  inputs = [ "//brave/third_party/rust/version_check/v0_9/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2015"
  cargo_pkg_version = "0.9.4"
  cargo_pkg_authors = "Sergio Benitez <sb@sergio.bz>"
  cargo_pkg_name = "version_check"
  cargo_pkg_description =
      "Tiny crate to check the version of the installed/running rustc."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
}
