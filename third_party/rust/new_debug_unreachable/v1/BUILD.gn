import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "new_debug_unreachable"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/new_debug_unreachable/v1/crate/examples/simple.rs",
    "//brave/third_party/rust/new_debug_unreachable/v1/crate/src/lib.rs",
    "//brave/third_party/rust/new_debug_unreachable/v1/crate/tests/check.rs",
  ]
  inputs =
      [ "//brave/third_party/rust/new_debug_unreachable/v1/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "1.0.4"
  cargo_pkg_authors = "Matt Brubeck <mbrubeck@limpet.net>, Jonathan Reem <jonathan.reem@gmail.com>"
  cargo_pkg_name = "new_debug_unreachable"
  cargo_pkg_description = "panic in debug, intrinsics::unreachable() in release (fork of debug_unreachable)"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
}
