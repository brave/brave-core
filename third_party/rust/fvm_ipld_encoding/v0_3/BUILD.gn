  crate_type = "rlib"
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/fvm_ipld_encoding/v0_3/crate/src/bytes.rs",
    "//brave/third_party/rust/fvm_ipld_encoding/v0_3/crate/src/cbor.rs",
