import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "sta_rs"
  epoch = "0.2"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/sta_rs/v0_2/crate/benches/bench.rs",
    "//brave/third_party/rust/sta_rs/v0_2/crate/src/lib.rs",
    "//brave/third_party/rust/sta_rs/v0_2/crate/test-utils/src/lib.rs",
    "//brave/third_party/rust/sta_rs/v0_2/crate/tests/e2e.rs",
  ]
  inputs = [
    "//brave/third_party/rust/sta_rs/v0_2/crate/README.md",
    "//brave/third_party/rust/sta_rs/v0_2/crate/SECURITY.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.2.0"
  cargo_pkg_authors = "Alex Davidson <coela@alxdavids.xyz>"
  cargo_pkg_name = "sta-rs"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/adss_rs/v0_2:lib",
    "//brave/third_party/rust/ppoprf/v0_2:lib",
    "//brave/third_party/rust/strobe_rng/v0_2:lib",
    "//brave/third_party/rust/strobe_rs/v0_8:lib",
    "//brave/third_party/rust/zeroize/v1:lib",
    "//third_party/rust/rand_core/v0_6:lib",
  ]
}
