import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "num_integer"
  epoch = "0.1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/num_integer/v0_1/crate/benches/average.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/benches/gcd.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/benches/roots.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/build.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/src/average.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/src/lib.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/src/roots.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/tests/average.rs",
    "//brave/third_party/rust/num_integer/v0_1/crate/tests/roots.rs",
  ]
  inputs = [
    "//brave/third_party/rust/num_integer/v0_1/crate/README.md",
    "//brave/third_party/rust/num_integer/v0_1/crate/RELEASES.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2015"
  cargo_pkg_version = "0.1.45"
  cargo_pkg_authors = "The Rust Project Developers"
  cargo_pkg_name = "num-integer"
  cargo_pkg_description = "Integer traits and functions"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//brave/third_party/rust/num_traits/v0_2:lib" ]
  build_deps = [ "//third_party/rust/autocfg/v1:buildrs_support" ]
  features = [
    "i128",
    "std",
  ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
