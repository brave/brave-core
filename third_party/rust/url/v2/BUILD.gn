import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "url"
  epoch = "2"
  crate_type = "rlib"
  crate_root = "crate/src/lib.rs"
  sources = [
    "//brave/third_party/rust/url/v2/crate/src/host.rs",
    "//brave/third_party/rust/url/v2/crate/src/lib.rs",
    "//brave/third_party/rust/url/v2/crate/src/origin.rs",
    "//brave/third_party/rust/url/v2/crate/src/parser.rs",
    "//brave/third_party/rust/url/v2/crate/src/path_segments.rs",
    "//brave/third_party/rust/url/v2/crate/src/quirks.rs",
    "//brave/third_party/rust/url/v2/crate/src/slicing.rs",
    "//brave/third_party/rust/url/v2/crate/tests/data.rs",
    "//brave/third_party/rust/url/v2/crate/tests/debugger_visualizer.rs",
    "//brave/third_party/rust/url/v2/crate/tests/unit.rs",
  ]
  inputs = [ "//brave/third_party/rust/url/v2/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "2.3.1"
  cargo_pkg_authors = "The rust-url developers"
  cargo_pkg_name = "url"
  cargo_pkg_description =
      "URL library for Rust, based on the WHATWG URL Standard"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/form_urlencoded/v1:lib",
    "//brave/third_party/rust/idna/v0_3:lib",
    "//brave/third_party/rust/percent_encoding/v2:lib",
  ]
}
