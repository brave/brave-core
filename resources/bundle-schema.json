          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "advertiser",
              "notificationText",
              "notificationURL",
              "uuid"
            ],
            "properties": {
              "creativeSetId": {
                "type": "string"
              },
              "campaignId": {
                "type": "string"
              },
              "startTimestamp": {
                "type": "string"
              },
              "endTimestamp": {
                "type": "string"
              },
              "daily_cap": {
                "type": "number"
              },
              "per_day": {
                "type": "number"
              },
              "total_max": {
                "type": "number"
              },
              "regions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "advertiser": {
                "type": "string"
              },
              "notificationText": {
                "type": "string"
              },
              "notificationURL": {
                "type": "string"
              },
              "uuid": {
                "type": "string"
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "categories"
  ],
  "additionalProperties": false
}
