          {
            "name": "result",
            "type": "integer"
          },
          {
            "name": "promotions",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "promotionId": {
                  "type": "string",
                  "description": "promotion id"
                },
                "type": {
                  "type": "integer",
                  "description": "promotion type"
                },
                "status": {
                  "type": "integer",
                  "description": "promotion status"
                },
                "expiresAt": {
                  "type": "integer",
