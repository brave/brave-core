[
  {
    "namespace": "binance",
    "description": "Use the <code>chrome.binance</code> API to receive notifications about Dapp detection.",
    "compiler_options": {
      "implemented_in": "brave/browser/extensions/api/binance_api.h"
    },
    "events": [
    ],
    "functions": [
      {
        "name": "getUserTLD",
        "type": "function",
        "description": "Gets the appropriate Binance TLD per a user's region",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "userTLD",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "isSupportedRegion",
        "type": "function",
        "description": "Checks if region is supported to show the widget",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "supported",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getClientUrl",
        "type": "function",
        "description": "Fetches the Oauth Url for Binance",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "clientUrl",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "getAccessToken",
        "type": "function",
        "description": "Facilitates access token creation given a temporary code",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "success",
                "type": "boolean",
                "description": "Indicates the access token was retrieved successfully"
              }
            ]
          }
        ]
      },
      {
        "name": "getAccountBalances",
        "type": "function",
        "description": "Retrieves user asset balances",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "balances",
                "type": "any"
              }, {
                "name": "success",
                "type": "boolean",
                "description": "Indicates whether the retrieval was successful"
              }
            ]
          }
        ]
      },
      {
        "name": "getConvertQuote",
        "type": "function",
        "description": "Gets a quote for a given conversion",
        "parameters": [
          {
            "type": "string",
            "name": "from"
          },
          {
            "type": "string",
            "name": "to"
          },
          {
            "type": "string",
            "name": "amount"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "quote",
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "quote id"
                  },
                  "price": {
                    "type": "string",
                    "description": "quote price"
                  },
                  "fee": {
                    "type": "string",
                    "description": "convert fee"
                  },
                  "amount": {
                    "type": "string",
                    "description": "total amount to be received"
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getDepositInfo",
        "type": "function",
        "description": "Fetches user address/url given an asset",
        "parameters": [
          {
            "type": "string",
            "name": "symbol"
          },
          {
            "type": "string",
            "name": "tickerNetwork"
          }, {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "depositAddress",
                "type": "string"
              },
              {
                "name": "depositTag",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "confirmConvert",
        "type": "function",
        "description": "Confirms a conversion given a quote id",
        "parameters": [
          {
            "type": "string",
            "name": "quoteId"
          }, {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "success",
                "type": "boolean"
              },
              {
                "name": "message",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "getConvertAssets",
        "type": "function",
        "description": "Gets a list of supported convert assets and their respective tradeables",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "supportedAssets",
                "type": "object",
                "additionalProperties": { "type": "any" }
              }
            ]
          }
        ]
      },
      {
        "name": "revokeToken",
        "type": "function",
        "description": "Revokes the token",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "success",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getCoinNetworks",
        "type": "function",
        "description": "Retrieves the primary networks for Binance assets",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "networks",
                "type": "object",
                "additionalProperties": { "type": "string" }
              }
            ]
          }
        ]
      },
      {
        "name": "getLocaleForURL",
        "type": "function",
        "description": "Returns the users locale to set the appropriate language on Binance.com",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "locale",
                "type": "string"
              }
            ]
          }
        ]
      }
    ],
    "types": [
    ],
    "properties": {
    }
  }
]
