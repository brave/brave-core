[
  {
    "namespace": "greaselion",
    "description": "Use the <code>chrome.greaselion</code> API to interact with Greaselion",
    "compiler_options": {
      "implemented_in": "brave/browser/extensions/api/greaselion_api.h"
    },
    "functions": [
      {
        "name": "isGreaselionExtension",
        "type": "function",
        "description": "Determine if given extension id represents a Greaselion extension",
        "parameters": [
          {
            "name": "id",
            "type": "string",
            "description": "The extension id to validate"
          }
        ],
        "returns_async": {
          "name": "callback",
          "parameters": [
            {
              "name": "valid",
              "type": "boolean"
            }
          ],
          "does_not_support_promises": "Requires refactoring"
        }
      }
    ]
  }
]
