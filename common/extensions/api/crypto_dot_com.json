[
  {
    "namespace": "cryptoDotCom",
    "description": "Use the <code>chrome.cryptoDotCom</code> to interact with crypto.com services.",
    "compiler_options": {
      "implemented_in": "brave/browser/extensions/api/crypto_dot_com_api.h"
    },
    "events": [
    ],
    "functions": [
      {
        "name": "getTickerInfo",
        "type": "function",
        "description": "Gets price and volume info for an asset pair",
        "parameters": [
          {
            "type": "string",
            "name": "asset"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "info",
                "type": "object",
                "properties": {
                  "price": {
                    "type": "string",
                    "description": "price"
                  },
                  "volume": {
                    "type": "string",
                    "description": "volume"
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getChartData",
        "type": "function",
        "description": "Gets chart data for an asset pair",
        "parameters": [
          {
            "type": "string",
            "name": "asset"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": { "type": "any" }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getSupportedPairs",
        "type": "function",
        "description": "Gets supported asset pairs",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "pair": {
                      "type": "string",
                      "description": "trading pair"
                    },
                    "base": {
                      "type": "string",
                      "description": "base asset"
                    },
                    "quote": {
                      "type": "string",
                      "description": "quote asset"
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getAssetRankings",
        "type": "function",
        "description": "Gets top gainers and losers",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "object",
                "properties": {
                  "gainers": {
                    "type": "array",
                    "description": "top gainers",
                    "items": {
                      "type": "object",
                      "additionalProperties": { "type": "any" }
                    }
                  },
                  "losers": {
                    "type": "array",
                    "description": "top losers",
                    "items": {
                      "type": "object",
                      "additionalProperties": { "type": "any" }
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "isSupported",
        "type": "function",
        "description": "Fetches whether crypto.com is supported",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "supported",
                "type": "boolean"
              }
            ]
          }
        ]
      }
    ],
    "types": [
    ],
    "properties": {
    }
  }
]
