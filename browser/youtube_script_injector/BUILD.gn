import("//third_party/jni_zero/jni_zero.gni")

static_library("youtube_script_injector") {
  sources = [
    "youtube_script_injector_tab_feature.cc",
    "youtube_script_injector_tab_feature.h",
  ]

  deps = [
    ":jni_headers",
    "//brave/components/script_injector/common/mojom",
    "//brave/components/youtube_script_injector/browser/content",
    "//brave/components/youtube_script_injector/browser/core",
    "//brave/components/youtube_script_injector/common",
    "//chrome/common",
  ]
}

generate_jni("jni_headers") {
  sources = [ "//brave/android/java/org/chromium/chrome/browser/YouTubeScriptInjectorTabFeature.java" ]

  public_deps = [ "//chrome/android:chrome_jni_headers" ]
}

source_set("browser_tests") {
  testonly = true
  defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]

  sources = [ "youtube_script_injector_tab_feature_browsertest.cc" ]

  deps = [
    ":jni_headers",
    "//base",
    "//brave/components/script_injector/common/mojom",
    "//brave/components/youtube_script_injector/browser/content",
    "//brave/components/youtube_script_injector/browser/core",
    "//brave/components/youtube_script_injector/common",
    "//chrome/common",
    "//chrome/test:test_support",
    "//chrome/test:test_support_ui_android",
    "//content/test:test_support",
    "//net:test_support",
    "//url",
  ]
}
