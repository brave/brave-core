<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/customize_menu_settings_title"
        android:textColor="@color/schemes_primary"
        android:textSize="14sp"
        android:padding="16dp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/customize_menu_contexual_text"
        android:textColor="@color/system_feedback_error"
        android:textSize="14sp"
        android:padding="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_menu_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
