source_set("component_loader") {
  sources = [
    "brave_component_loader.cc",
    "brave_component_loader.h",
  ]

  deps = [
    "//base",
    "//brave/components/brave_extension:static_resources",
    "//chrome/browser/profiles:profile",
    "//components/prefs",
    "//extensions/browser",
    "//extensions/common",
    "//ui/base",
  ]

  # Note: When desktop Android is enabled, there's a circular dependency:
  # Chrome extensions -> Brave extensions -> component_loader -> Chrome extensions
  # To break the cycle, component_loader doesn't directly depend on Chrome's extensions
  # when desktop Android is enabled. Instead, it gets Chrome's extensions headers
  # transitively through Brave's extensions target (which depends on Chrome's extensions).
  # Note: We can't use enable_desktop_android_extensions here because it's defined
  # in extensions/buildflags/buildflags.gni which creates a circular import.
  # Instead, we check is_desktop_android which is set earlier.
  if (!defined(is_desktop_android) || !is_desktop_android) {
    deps += [ "//chrome/browser/extensions" ]
  }
  # When desktop Android is enabled, component_loader gets headers transitively
  # through Brave's extensions target, so no direct dependency needed.

  if (enable_web_discovery_native) {
    deps += [ "//brave/components/web_discovery/common" ]
  }
}

# This is split out from extensions and the rest of brave_prefs_util because it
# has circular dependencies on //chrome/browser.
# https://github.com/brave/brave-browser/issues/41418
# Note: brave_prefs_util_impl depends on chrome/common/extensions/api/settings_private.h
# which is only generated when enable_extensions is true. On Android, enable_extensions
# is false even when enable_desktop_android_extensions is true, so the header isn't generated.
# Therefore, this target is only built when enable_extensions is true.
if (enable_extensions) {
  source_set("brave_prefs_util_impl") {
    visibility = [
      ":*",
      "//chrome/browser",
    ]
    sources = [ "api/settings_private/brave_prefs_util_impl.cc" ]

    deps = [
      "//brave/components/brave_shields/core/browser",
      "//chrome/browser:browser_public_dependencies",
      "//chrome/browser/content_settings:content_settings_factory",
      "//chrome/browser/profiles:profile",
      "//chrome/common/extensions/api",
      "//components/content_settings/core/browser:cookie_settings",
      "//components/content_settings/core/common",
      "//content/public/browser",
      "//url",
    ]
  }
}

