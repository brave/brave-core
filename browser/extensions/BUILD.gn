  }

  deps = [
    "//base",
    "//brave/app:brave_generated_resources_grit",
    "//brave/browser:browser_process",
    "//brave/browser/brave_adaptive_captcha",
    "//brave/browser/brave_ads",
    "//brave/browser/brave_rewards",
    "//brave/browser/brave_rewards:util",
    "//brave/browser/brave_search",
    "//brave/browser/component_updater",
    "//brave/browser/extensions/api:generated_api_registration",
    "//brave/browser/themes",
    "//brave/browser/ui:brave_tab_prefs",
    "//brave/common",
    "//brave/common/extensions/api",
    "//brave/components/ai_chat/core/common",
    "//brave/components/brave_adaptive_captcha",
    "//brave/components/brave_ads/browser",
    "//brave/components/brave_ads/core/public:headers",
    "//brave/components/brave_extension:static_resources",
    "//brave/components/brave_news/common",
    "//brave/components/brave_rewards/content",
    "//brave/components/brave_rewards/core",
    "//brave/components/brave_rewards/core/mojom",
    "//brave/components/brave_search/browser",
    "//brave/components/brave_shields/core/common",
    "//brave/components/brave_vpn/common/buildflags",
    "//brave/components/brave_wallet/browser:pref_names",
    "//brave/components/brave_wallet/browser:utils",
    "//brave/components/brave_wallet/common",
    "//brave/components/brave_wayback_machine/buildflags",
    "//brave/components/constants",
    "//brave/components/de_amp/common",
    "//brave/components/debounce/core/common",
    "//brave/components/decentralized_dns/core",
    "//brave/components/ntp_background_images/common",
    "//brave/components/playlist/core/common",
    "//brave/components/request_otr/common",
    "//brave/components/tor/buildflags",
    "//brave/components/web_discovery/buildflags",
    "//brave/components/webcompat_reporter/common",
    "//chrome/browser:browser_process",
    "//chrome/browser:browser_public_dependencies",
    "//chrome/browser/profiles:profile",
    "//chrome/common",
    "//components/browsing_data/core",
    "//components/gcm_driver:gcm_buildflags",
    "//components/prefs",
    "//components/update_client:network_impl",
    "//components/user_prefs",
    "//content/public/browser",
  ]

  # Note: When desktop Android is enabled, there's a circular dependency:
  # Chrome extensions -> Brave extensions -> Chrome extensions
  # To break the cycle, we conditionally exclude Chrome's extensions from deps
  # when desktop Android is enabled, and use allow_circular_includes_from to get headers.
  # Note: We can't use enable_desktop_android_extensions here because it's defined
  # in extensions/buildflags/buildflags.gni which creates a circular import.
  # Instead, we check is_desktop_android which is set earlier.
  if (!defined(is_desktop_android) || !is_desktop_android) {
    deps += [
      "//chrome/browser/extensions",
      "//chrome/browser/extensions:chrome_extensions_browser_client",
      "//chrome/browser/ui",
      "//chrome/browser/ui/browser_window",
    ]
  }

  if (toolkit_views) {
    deps += [ "//brave/components/sidebar/browser" ]
  }

  public_deps = [
    "//brave/components/brave_ads/core/mojom",
    "//brave/components/brave_rewards/core/mojom",
    "//extensions/browser",
  ]

  # Note: When desktop Android is enabled, we add chrome/common/extensions/api to public_deps
  # (not deps) to ensure the generated headers are available in the include path.
  # This is needed because brave_prefs_util.cc includes chrome/common/extensions/api/settings_private.h
  # and the chromium_src override includes the original header which also includes it.
  if (defined(is_desktop_android) && is_desktop_android) {
    public_deps += [
      "//chrome/common/extensions/api",
    ]
  }

  # Note: We can't use enable_desktop_android_extensions here because it's defined
  # in extensions/buildflags/buildflags.gni which we've already imported. Instead,
  # we check is_desktop_android which is set earlier and enable_desktop_android_extensions
  # is derived from it.
  if (defined(is_desktop_android) && is_desktop_android) {
    # When desktop Android is enabled, both manifest_v2 and component_loader are moved to deps
    # (not public_deps) to avoid circular dependencies:
    # - Chrome extensions -> Brave extensions -> manifest_v2 -> Chrome extensions
    # - Chrome extensions -> Brave extensions -> component_loader -> Chrome extensions
    # They are still compiled and linked, just not exported as transitive dependencies.
    # manifest_v2 and component_loader get Chrome extensions headers transitively through
    # Brave extensions' dependency on Chrome extensions.
    deps += [
      ":component_loader",
      "//brave/browser/extensions/manifest_v2:manifest_v2",
    ]
  } else {
    # On desktop, component_loader and manifest_v2 can be in public_deps since there's no circular dependency
    public_deps += [
      ":component_loader",
      "//brave/browser/extensions/manifest_v2:manifest_v2",
    ]
  }

  if (use_gcm_from_platform) {
    deps += [ "//components/gcm_driver" ]
  }

  if (enable_brave_wayback_machine) {
    deps += [ "//brave/components/brave_wayback_machine" ]
  }

  if (enable_speedreader) {
    deps += [ "//brave/components/speedreader" ]
  }

  if (enable_brave_vpn) {
    deps += [ "//brave/components/brave_vpn/common" ]
  }

  if (enable_tor) {
    deps += [
      "//brave/browser/tor",
      "//brave/components/tor",
      "//brave/components/tor:pref_names",
    ]
  }

  if (enable_web_discovery_native) {
    deps += [ "//brave/components/web_discovery/common" ]
  }

  if (is_win) {
    deps += [ "//brave/components/windows_recall" ]
  }

  deps += [
    "//brave/components/brave_wallet/browser",
    "//brave/components/brave_wallet/common:buildflags",
    "//components/prefs",
  ]

  allow_circular_includes_from = []
  if (enable_extensions) {
    allow_circular_includes_from = [ ":brave_prefs_util_impl" ]
  }

  # Note: We can't use enable_desktop_android_extensions here because it's defined
  # in extensions/buildflags/buildflags.gni which we've already imported. Instead,
  # we check is_desktop_android which is set earlier and enable_desktop_android_extensions
  # is derived from it.
  if (defined(is_desktop_android) && is_desktop_android) {
    # When desktop Android is enabled, there's a circular dependency chain:
    # Chrome UI -> Brave UI -> Chrome WebUI -> Chrome Extensions -> Brave Extensions -> Chrome UI
    # To break the cycle, we don't add Chrome extensions or Chrome UI to Brave extensions' deps.
    # Chrome extensions depends on Brave extensions (for BraveExtensionManagement),
    # so we can't have Brave extensions also depend on Chrome extensions or Chrome UI.
    # Instead, we rely on chromium_src overrides and forward declarations to provide
    # the necessary headers when needed. Some files may need conditional compilation
    # or chromium_src overrides to work without the direct dependency.
    # Note: We don't add chrome/browser/ui or chrome/browser/ui/browser_window here
    # because they create a circular dependency through Brave UI -> Chrome WebUI -> Chrome Extensions -> Brave Extensions.
    # Note: chrome/common/extensions/api is added to public_deps above (not here) to ensure
    # the generated headers are available in the include path when needed.
    # Headers from chrome/browser/extensions will be available through chromium_src overrides
    # or forward declarations where needed.
  }
}

