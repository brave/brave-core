source_set("brave_account") {
  if (!is_android) {
    sources = [
      "brave_account_ui_desktop.cc",
      "brave_account_ui_desktop.h",
    ]
  } else {
    sources = [
      "brave_account_ui_android.cc",
      "brave_account_ui_android.h",
    ]
  }

  deps = [
    "//base",
    "//brave/browser/brave_account",
    "//brave/components/brave_account",
    "//brave/components/brave_account:features",
    "//brave/components/constants",
    "//chrome/browser/profiles",
    "//content/public/browser",
    "//content/public/common",
    "//ui/webui",
  ]

  if (!is_android) {
    deps += [
      "//chrome/browser/ui/webui",
      "//ui/compositor",
      "//ui/gfx/geometry",
      "//ui/views",
      "//ui/web_dialogs",
      "//url",
    ]
  }
}
