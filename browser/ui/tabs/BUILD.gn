      "features.h",
      "shared_pinned_tab_service.cc",
      "shared_pinned_tab_service.h",
      "shared_pinned_tab_service_factory.cc",
      "shared_pinned_tab_service_factory.h",
    ]

    deps = [
      "//brave/common/",
      "//chrome/app:generated_resources",
      "//components/prefs",
      "//components/sessions",
      "//content/public/browser",
      "//ui/color",
    ]
  }
