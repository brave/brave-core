import("//brave/components/ai_chat/core/common/buildflags/buildflags.gni")
import("//brave/components/containers/buildflags/buildflags.gni")
import("//brave/components/speedreader/common/buildflags/buildflags.gni")
import("//build/config/ui.gni")

brave_ui_allow_circular_includes_from =
    [ "//brave/browser/ui/webui/ads_internals" ]
if (enable_ai_chat) {
  brave_ui_allow_circular_includes_from +=
      [ "//brave/browser/ui/webui/ai_chat" ]
}
if (!is_android) {
  brave_ui_allow_circular_includes_from += [
    "//brave/browser/ui/browser_window/internal",
    "//brave/browser/ui/tabs:tabs_public",
    "//brave/browser/ui/webui/brave_education",
    "//brave/browser/ui/webui/brave_new_tab_page_refresh",
    "//brave/browser/ui/webui/brave_news_internals",
    "//brave/browser/ui/webui/side_panel/customize_chrome",
    "//brave/browser/ui/tabs:tab_strip",
  ]
}
if (is_android) {
  brave_ui_allow_circular_includes_from +=
      [ "//brave/browser/ui/webui/new_tab_takeover/android:new_tab_takeover" ]
}
if (toolkit_views) {
  brave_ui_allow_circular_includes_from += [
    "//brave/browser/ui/views/frame/split_view",
    "//brave/browser/ui/views/frame/vertical_tabs",
    "//brave/browser/ui/views/location_bar",
    "//brave/browser/ui/views/page_info",
    "//brave/browser/ui/sidebar",
    "//brave/browser/ui/email_aliases",
  ]

  if (enable_ai_chat) {
    brave_ui_allow_circular_includes_from +=
        [ "//brave/browser/ui/views/side_panel/ai_chat" ]
  }

  if (enable_containers) {
    brave_ui_allow_circular_includes_from += [ "//brave/browser/ui/containers" ]
  }

  if (enable_speedreader) {
    brave_ui_allow_circular_includes_from +=
        [ "//brave/browser/ui/views/speedreader" ]
  }
}

if (enable_speedreader) {
  brave_ui_allow_circular_includes_from += [ "//brave/browser/ui/speedreader" ]
}
