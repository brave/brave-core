import("//build/config/ozone.gni")

source_set("browser_tests") {
  testonly = true
  defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]

  sources = [
    "//brave/browser/ui/views/tabs/brave_tab_hover_browsertest.cc",
    "//brave/browser/ui/views/tabs/tab_drag_controller_browsertest.cc",
  ]

  deps = [
    "//base",
    "//chrome:resources",
    "//chrome:strings",
    "//chrome/browser",
    "//chrome/browser/ui",
    "//chrome/browser/ui:ui_features",
    "//chrome/common",
    "//chrome/test",
    "//chrome/test:test_support",
    "//components/prefs",
    "//ui/base:test_support",
  ]

  if (use_ozone) {
    public_deps = [
      "//ui/ozone",
      "//ui/platform_window/common",
    ]
  }
}

source_set("unit_tests") {
  testonly = true

  sources = [
    "//chrome/browser/ui/views/tabs/fake_tab_slot_controller.cc",
    "//chrome/browser/ui/views/tabs/fake_tab_slot_controller.h",
    "brave_tab_unittest.cc",
  ]

  deps = [
    "//base",
    "//brave/common",
    "//chrome/browser/ui",
    "//chrome/test:test_support",
    "//content/test:test_support",
    "//testing/gmock",
    "//testing/gtest",
  ]
}
