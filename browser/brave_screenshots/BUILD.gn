import("//brave/components/brave_screenshots/common/buildflags/buildflags.gni")

assert(enable_brave_screenshots)

source_set("brave_screenshots") {
  sources = [
    "screenshots_utils.cc",
    "screenshots_utils.h",
  ]

  public_deps = [ "//content/public/browser" ]

  deps = [
    "//chrome/browser/image_editor:image_editor",
    "//chrome/browser/ui:ui",
    "//ui/base/clipboard:clipboard",
  ]
}

source_set("tabs") {
  sources = [
    "screenshots_tab_helper.cc",
    "screenshots_tab_helper.h",
  ]

  public_deps = [
    "//base",
    "//content/public/browser",
  ]

  deps = [
    ":brave_screenshots",
    "//brave/app:generate_command_metadata",
    "//chrome/browser/image_editor:image_editor",
    "//chrome/browser/ui",
  ]
}
