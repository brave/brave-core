// Listed feature definitions are appended to the existing Chromium ones. To
// fully replace definitions use "replace!" prefix like so:
// "replace!sockets.tcp" : { ... }.

{
  "bookmarks": [
    {
      "channel": "stable",
      "contexts": ["webui"],
      "matches": ["chrome://newtab/*"]
    }
  ],
  "extension.inIncognitoContext": [
    {
      "channel": "stable",
      "contexts": ["webui"],
      "matches": ["chrome://newtab/*"]
    }
  ],
  "tabs": [
    {
      "channel": "stable",
      "contexts": ["webui"],
      "matches": [
        "chrome://brave-shields.top-chrome/*",
        "chrome://rewards-panel.top-chrome/*",
        "chrome://wallet-panel.top-chrome/*",
        "chrome://wallet/*"
      ]
    }
  ],
  "topSites": [
    {
      "channel": "stable",
      "contexts": ["webui"],
      "matches": ["chrome://newtab/*"]
    }
  ]
}
