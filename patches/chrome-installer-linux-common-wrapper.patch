+++ b/chrome/installer/linux/common/wrapper
@@ -27,6 +27,40 @@ fi
 
 export CHROME_VERSION_EXTRA="@@CHANNEL@@"
 
+# Add command-line options from a config file. Empty lines and #-comments are ignored.
+cfg_channel="$([[ "$CHROME_VERSION_EXTRA" == stable ]] && echo || echo "$CHROME_VERSION_EXTRA-")"
+cfg_file="${XDG_CONFIG_HOME:-"$HOME/.config"}/brave-${cfg_channel}flags.conf"
+cfg_options=()
+
+shopt -s extglob
+if [[ -f "$cfg_file" ]]; then
+  # Parse options after comments have been removed.
+  parse_cfg_options() {
+    local line="$*" key val val_and_rest rest
+
+    case "$line" in
+      "") return;;
+      [[:space:]]*) parse_cfg_options "${line:1}"; return;;
+      --+([![:space:]])=\"*\"*|--+([![:space:]])=\'*\'*)
+          IFS="=" read -r key val_and_rest <<<"$line"
+          IFS="${val_and_rest:0:1}" read -r _ val rest <<<"$val_and_rest"
+          opt="$key=$val";;
+      *) read -r opt rest <<<"$line";;
+    esac
+
+    cfg_options+=("$opt")
+    parse_cfg_options "$rest"
+  }
+
+  # Remove comments and parse the remaining options.
+  while read -r cfg_line; do
+    read -ra cfg_line_items <<<"${cfg_line%%[[:space:]]#*}"
+    if [[ "${cfg_line_items[0]:0:1}" != "#" ]]; then
+        parse_cfg_options "${cfg_line_items[*]}"
+    fi
+  done <"$cfg_file"
+fi
+
 # We don't want bug-buddy intercepting our crashes. http://crbug.com/24120
 export GNOME_DISABLE_CRASH_DIALOG=SET_BY_GOOGLE_CHROME
 
@@ -37,4 +71,4 @@ exec > >(exec cat)
 exec 2> >(exec cat >&2)
 
 # Note: exec -a below is a bashism.
-exec -a "$0" "$HERE/@@PROGNAME@@" "$@"
+exec -a "$0" "$HERE/@@PROGNAME@@" "${cfg_options[@]}" "$@"
